version: '3.8'

services:
  web:
    build: 
      context: ./
      dockerfile: Dockerfile.prod
    command: gunicorn dj_dastore.wsgi:application --bind 0.0.0.0:8000
    expose:
        - 8000
    volumes:
      - static_volume:/home/dj_dastore/web/static_cdn
      - media_volume:/home/dj_dastore/web/media_cdn
    env_file:
      - ./.env.prod
    depends_on:
      - db1_prod
    environment:
      DJANGO_SETTINGS_MODULE: dj_dastore.settings.production
  nginx:
    build: ./nginx
    volumes:
      - static_volume:/home/dj_dastore/web/static_cdn
      - media_volume:/home/dj_dastore/web/media_cdn
    ports:
      - 1337:80
    depends_on:
      - web
  db1_prod:
    image: postgres:13.0-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    env_file:
      - ./.env.prod.db

volumes:
  postgres_data:
  static_volume:
  media_volume:
